<div class="container">
  <h1>All Orders</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Order ID</th>
        <th>User</th>
        <th>Total</th>
        <th>Status</th>
        <th>Created At</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.user.email %></td>
          <td><%= number_to_currency(order.total) %></td>
          <td><%= order.status %></td>
          <td><%= order.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
          <td><%= link_to 'View', admin_order_path(order) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%== pagy_bootstrap_nav @pagy %>
</div>
